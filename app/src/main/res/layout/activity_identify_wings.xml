<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundshape">


    <TextView
        android:id="@+id/wings_titre"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:text="@string/identification_wings"
        android:textColor="#404040"
        android:textStyle="bold"
        android:textSize="32sp"/>

    <ImageView
        android:id="@+id/wings_img_no_veins"

        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"

        android:src="@drawable/app_wings_no_veins_png"/>

    <ImageView
        android:id="@+id/wings_img_veins"

        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"

        android:src="@drawable/app_wings_veins_png"/>

    <Button
        android:id="@+id/wings_button_1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_above="@id/wings_img_veins"

        android:padding="5dp"

        android:background="@drawable/buttonshape"

        android:text="@string/text_button_wings_1"
        android:textColor="#FFFFFF"
        android:gravity="left|center_vertical"/>

    <Button
        android:id="@+id/wings_button_2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_above="@id/wings_img_veins"

        android:padding="5dp"

        android:background="@drawable/buttonshape"

        android:text="@string/text_button_wings_2"
        android:textColor="#FFFFFF"
        android:gravity="right|center_vertical"/>


    <Button
        android:id="@+id/wings_button_error"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        android:padding="5dp"

        android:background="@drawable/buttonshape"

        android:text="@string/text_error_id_button"
        android:textColor="#FF0000"/>

</RelativeLayout>