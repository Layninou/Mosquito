<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundshape"
    tools:context=".LocaliseActivity">

    <TextView
        android:id="@+id/latitude_label"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/latitude_label"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#404040"

        android:layout_above="@+id/localise_latitude_label"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/localise_latitude_label"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30sp"

        android:layout_above="@+id/longitude_label"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/longitude_label"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/longitude_label"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#404040"

        android:layout_centerHorizontal="true"
        android:layout_above="@+id/localise_longitude_label" />

    <TextView
        android:id="@+id/localise_longitude_label"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30sp"

        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/loc_return_button_id"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        android:background="@drawable/buttonshape"

        android:text="@string/loc_return_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/loc_next_button_id"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_above="@+id/loc_return_button_id"

        android:background="@drawable/buttonshape"

        android:text="@string/loc_next_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

</RelativeLayout>