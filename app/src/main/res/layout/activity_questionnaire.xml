            android:textColor="#808080"

            android:buttonTint="#7FDD4C"/>

        <RadioButton
            android:id="@+id/radio_question_a_3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/answer_question_1_c"
            android:textColor="#808080"

            android:buttonTint="#7FDD4C"/>

        <RadioButton
            android:id="@+id/radio_question_a_4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/answer_question_1_d"
            android:textColor="#808080"

            android:buttonTint="#7FDD4C"/>

    </RadioGroup>

    <TextView
