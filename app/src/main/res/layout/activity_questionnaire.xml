        android:layout_below="@id/text_question_a"

        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_question_a_1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/answer_question_1_a"
            android:textColor="#808080"

            android:buttonTint="#7FDD4C"

            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_question_a_2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

